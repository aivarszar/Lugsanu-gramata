<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title / Header section (combined) - max 50% of screen -->
    <ScrollView
        android:id="@+id/headerScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:scrollbars="vertical"
        android:background="?attr/colorPrimary"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title text (always shown) -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:background="?attr/colorPrimary" />

            <!-- Header text (shown when section has header) -->
            <TextView
                android:id="@+id/headerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="16dp"
                android:textColor="#333333"
                android:background="#F5F5F5"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Header navigation bar (thin, like progress bar) -->
    <LinearLayout
        android:id="@+id/headerNavigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        android:visibility="gone">

        <Button
            android:id="@+id/prevHeaderButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="&lt;&lt;"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="?android:attr/borderlessButtonStyle" />

        <TextView
            android:id="@+id/headerIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="1/1" />

        <Button
            android:id="@+id/nextHeaderButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="&gt;&gt;"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?attr/colorPrimary" />

    <!-- Page section (bottom level navigation) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pageViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Page navigation bar (thin, at bottom) -->
    <LinearLayout
        android:id="@+id/pageNavigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/prevPageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="←"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="?android:attr/borderlessButtonStyle" />

        <ProgressBar
            android:id="@+id/pageProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progressTint="?attr/colorPrimary"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:text="1/10"
            android:visibility="gone" />

        <Button
            android:id="@+id/nextPageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="→"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <!-- Separate progress container (hidden in new design) -->
    <LinearLayout
        android:id="@+id/pageProgressContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
