<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header navigation bar (moved to top, below app toolbar) -->
    <RelativeLayout
        android:id="@+id/headerNavigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <Button
            android:id="@+id/prevHeaderButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="◄"
            android:textSize="24sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:padding="0dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/nextHeaderButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="►"
            android:textSize="24sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:padding="0dp"
            android:background="@android:color/transparent" />

        <ProgressBar
            android:id="@+id/headerProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_toEndOf="@id/prevHeaderButton"
            android:layout_toStartOf="@id/headerIndicator"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progressTint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/headerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/nextHeaderButton"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:text="1/5" />

    </RelativeLayout>

    <!-- Header section -->
    <ScrollView
        android:id="@+id/headerScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="?attr/colorPrimary"
        android:fillViewport="false">

        <!-- Header text (shown when section has header) -->
        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="16dp"
            android:textColor="#333333"
            android:background="#F5F5F5"
            android:visibility="gone" />

    </ScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?attr/colorPrimary" />

    <!-- Page section (bottom level navigation) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pageViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <!-- Page navigation bar -->
    <RelativeLayout
        android:id="@+id/pageNavigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <Button
            android:id="@+id/prevPageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="◄"
            android:textSize="24sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:padding="0dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/nextPageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="►"
            android:textSize="24sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:padding="0dp"
            android:background="@android:color/transparent" />

        <ProgressBar
            android:id="@+id/pageProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_toEndOf="@id/prevPageButton"
            android:layout_toStartOf="@id/pageIndicator"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:max="100"
            android:progressTint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/nextPageButton"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:text="1/10" />

    </RelativeLayout>

    <!-- Separate progress container (hidden in new design) -->
    <LinearLayout
        android:id="@+id/pageProgressContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
